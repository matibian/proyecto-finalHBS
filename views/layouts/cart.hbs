  <body>
    {{>navbar}} 
 
    <section class="h-100 h-custom" style="background-color: #cecdd7;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
              <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                <div class="card-body p-0">
                  <div class="row g-0">
                    <div class="col-lg-8">
                      <div class="p-5">
                        <div class="d-flex justify-content-between align-items-center mb-5">
                          <h1 class="fw-bold mb-0 text-black">Carrito </h1>
                          <h6 class="mb-0 text-muted"><span id="cantProductos"></span>{{user.cart.length}} Items </h6>
                        </div>
                        <div id="prodCart">
                          {{#each user.cart}}
                               <div class="row mb-4 d-flex justify-content-between align-items-center">
                    <div class="col-md-2 col-lg-2 col-xl-2">
                      <img
                        src="{{thumbnail}}"
                        class="img-fluid rounded-3" alt="Cotton T-shirt">
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3">
                      {{!-- <h6 class="text-muted">Shirt</h6> --}}
                      <h6 class="text-black mb-0">{{name}}</h6>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                       <form action="/cart/subs/{{_id}}" method="post">
                      <button class="delete-button">
                        <i class="fas fa-minus"></i>
                      </button>
                      </form>

                      <input id="form1" min="0" name="quantity" readonly inputmode="numeric" style="width : 50px" value="{{quant}}" type="text"
                        class="form-control form-control-sm" />
                      <form action="/cart/add/{{_id}}" method="post">
                      <button class="delete-button">
                        <i class="fas fa-plus"></i>
                      </button>
                      </form>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                      <h6 class="mb-0">${{price}}</h6>
                    </div>
                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                      <form action="/cart/prodDel/{{_id}}" method="post">
                        <button type="submit" class="delete-button"><i class="fas fa-times"></i></button>
                      </form>
                    </div>
                  </div>

                           {{/each}}
                        </div>
                        

      
      
                        <hr class="my-4">
      
                        <div class="pt-5">
                          <h6 class="mb-0"><a href="/" class="text-body"><i
                                class="fas fa-long-arrow-alt-left me-2"></i>Volver atras</a></h6>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-4 bg-grey">
                      <div class="p-5">
                        <h3 class="fw-bold mb-5 mt-2 pt-1">Total:  $ {{total}}</h3>
